{
  // Use the TypeScript parser
  "parser": "@typescript-eslint/parser",
  // Link the TypeScript config to make use of type information
  "parserOptions": {
    "project": "tsconfig.json"
  },
  // Recognize globals for diferent environments
  "env": {
    "browser": true,
    "jest": true,
    "es6": true,
    "node": true
  },
  // Enable plugins
  "plugins": [
    "@typescript-eslint", // Add typescript support
    "react", // Load react linting
    "prettier" // Enable prettier to be run as eslint rules
  ],
  // Extend other configs with recommended settings
  "extends": [
    "eslint:recommended", // Base config recommended to all projects
    "plugin:@typescript-eslint/recommended", // Recommended for typescript projects
    "plugin:react/recommended", // React specific rules
    "airbnb-typescript", // A generally good config to extend
    "plugin:prettier/recommended" // Load prettier plugin and let prettier handle formatting errors
  ],
  // Specify rules that override defaults and the ones in the extended configs
  "rules": {
    "import/no-named-as-default": 0,
    "jsx-a11y/anchor-is-valid": [
      "error",
      {
        "components": ["Link"],
        "specialLink": ["to"]
      }
    ]
  },
  "settings": {
    "import/resolver": {
      "node": {
        "moduleDirectory": ["node_modules", "./"]
      }
    }
  }
}
